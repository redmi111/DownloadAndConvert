<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_60"
        android:layout_marginStart="@dimen/padding_10"
        android:layout_marginTop="@dimen/padding_10"
        android:layout_marginEnd="@dimen/padding_10">

        <ImageView
            android:id="@+id/img_thumb"
            android:layout_width="@dimen/padding_50"
            android:layout_height="@dimen/padding_50"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@color/color_gray_1" />

        <LinearLayout
            android:id="@+id/ll_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/img_thumb"
            android:orientation="vertical"
            android:paddingStart="@dimen/padding_10"
            android:paddingEnd="0dp">

            <TextView
                android:id="@+id/tv_file_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/upgrade_premium" />

            <TextView
                android:id="@+id/tv_file_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_10"
                android:text="4.5MB" />

            <com.daimajia.numberprogressbar.NumberProgressBar
                android:id="@+id/number_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_10"
                android:visibility="gone" />

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_70">


    </RelativeLayout>

</LinearLayout>